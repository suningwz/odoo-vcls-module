        <record id="view_tree_lead_line_inherit" model="ir.ui.view">
            <field name="name">crm.lead.form.lead.inherit</field>
            <field name="model">crm.lead.line</field>
            <field name="inherit_id" ref="crm_lead_product.view_tree_lead_line"/>
            <field name="arch" type="xml">
                <field name="product_id" position="replace">
