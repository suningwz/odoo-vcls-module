        <record id="crm.crm_case_form_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.form.lead</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <form string="Leads Form">
               <header>
                    <button name="%(crm.action_crm_lead2opportunity_partner)d" string="Convert to Opportunity" type="action" help="Convert to Opportunity" class="oe_highlight" attrs="{'invisible': [('type', '=', 'opportunity')]}"/>
                    <button name="create_contact_pop_up" string="Create contact" type="object" help="Create related Contact" class="oe_highlight" attrs="{'invisible': ['|',('type', '=', 'opportunity'),('partner_id','!=',False)]}"/>
                    <button name="toggle_active" string="Restore" type="object" attrs="{'invisible': ['|', ('probability', '&gt;', 0), ('active', '=', True)]}"/>
                    <button name="action_set_lost" string="Mark as Lost" type="object" attrs="{'invisible': ['&amp;', ('probability', '=', 0), ('active', '=', False)]}" invisible="1"/>
                    <field name="lead_stage_id" widget="statusbar"
                            options="{'clickable': '1'}"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_user" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="badge-pill badge-danger float-right" attrs="{'invisible': ['|', ('probability', '&gt;', 0), ('active', '=', True)]}">Lost</div>
                    <div class="badge-pill badge-success float-right" attrs="{'invisible': [('probability', '&lt;', 100)]}">Won</div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Lead"/>
                        <h1><field name="name" placeholder="Built from contact name..." readonly="1" style="color:#08206E;"/></h1>
                    </div>
                    <group>
                        <group>
                            <!-- Preload all the partner's information -->
                            <field name="partner_id" string="Search Individual" widget="res_partner_many2one" 
                            options="{'no_quick_create': True, 'no_create_edit' : True}"
                            context="{'default_name': contact_name, 'default_street': street, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_function': function, 'default_phone': phone, 'default_mobile': mobile, 'default_email': email_from, 'default_user_id': user_id, 'default_team_id': team_id, 'default_website': website, 'show_vat': True}"/>
                            <field name="partner_name" string="Company Name" required="True"/>
                            <field name="altname" attrs="{'invisible':[('hide_altname', '=', True)],'readonly':[('partner_id','!=',False)]}"/>
                            <field name="hide_altname" invisible="1"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" required="True"/>
                            </div>
                            <field name="website" widget="url" placeholder="e.g. voisinconsulting.com"/>
                        </group>
                        <group>
                            <label for="contact_name"/>
                            <div class="o_row">
                                <field name="contact_name"/>
                                <field name="title" placeholder="Salutation" domain="[]" options="{&quot;no_open&quot;: True}" required="True"/>
                            </div>
                            <field name="is_blacklisted" invisible="1"/>
                            <label for="email_from" class="oe_inline"/>
                            <div class="o_row o_row_readonly">
                                <i class="fa fa-ban" style="color: red;" role="img" title="This email is blacklisted for mass mailing" aria-label="Blacklisted" attrs="{'invisible': [('is_blacklisted', '=', False)]}" groups="base.group_user"/>
                                <field name="email_from" widget="email" required="True"/>
                            </div>
                            <field name="partner_seniority_id" options='"no_create_edit": True}'/>
                            <field name = "age" string = 'Age' />
                            <field name="function" string="Job Title" required="True"/>
                            <field name="functional_focus_id" options='"no_create_edit": True}'/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group>
                            <field name="user_id" string="Account Manager" domain="[('share', '=', False)]" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'sales_team.group_sale_salesman_all_leads'], 'team_id': team_id}" class="color:#08206E;"/>
                            <field name="initial_vcls_contact"/>
                            <field name="meet_story" string = "How did you meet ?" required="True"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="type" invisible="1"/>
                            <field name="source_id" options='"no_create_edit": True}' invisible="1"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                    <notebook>
                        <page string="Internal Notes">
                            <field name="description"/>
                        </page>
                        
                        <page name="segmentation" string="Business Segmentation">
                            <group>
                                <group>
                                    <field name="country_group_id"/>
                                    <field name="industry_id"/>
                                </group>
                                <group>
                                    <field name="client_activity_ids" widget="many2many_tags"/>
                                    <field name="client_product_ids" widget="many2many_tags"/>
                                    <field name="therapeutic_area_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        
                        <page name="extra" string="Marketing Info">
                            <group>
                                <group string="Email" groups="base.group_no_one" invisible="1">
                                    <field name="message_bounce" readonly="1" style="color:#08206E;"/>
                                </group>
                                <group string="Tracking" groups="base.group_multi_company,base.group_no_one" name="categorization">
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" invisible="1"/>
                                    
                                    <field name="campaign_id" invisible="1" string = "Opt-in Campaign" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                                    
                                    <!--
                                    <field name = "opted_in_date" attrs="{'invisible': [('campaign_id', '=', False)]}" />
                                    <field name = "unsubscribed_campaign_id" options='"no_create_edit": True}'/>
                                    <field name = "opted_out_date" attrs="{'invisible': [('unsubscribed_campaign_id', '=', False)]}" />
                                    <field name = "gdpr_status" />-->
                                    
                                    <field name="medium_id" invisible="1"/>
                                    
                                    
                                </group>
                                <group string="Analysis" groups="base.group_no_one">
                                    <field name="date_open"/>
                                    <field name="date_closed"/>
                                    <field name="probability"/>
                                </group>
                                <!--
                                <group string = 'All Participated Events'>
                                    <button name = "all_campaigns_pop_up" 
                                        string = "OPEN" 
                                        type = "object"
                                        icon="fa-bar-chart"
                                        class = 'btn btn-primary'
                                    />
                                </group>
                                -->
                            </group>
                        </page>
                        <page name="sales_info" string="Sales Info">
                            <group>
                                <group>
                                    <field name="team_id" widget="selection" domain="[('use_leads','=',True)]"/>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                                </group>
                                <group>
                                    <field name="date_deadline" string="Proposal Sending Deadline"/>
                                    <field name="expected_start_date"/>                        
                                </group>
                            </group>
                        </page>
                        <page name="lead_history" string="Lead History">
                            <field name="lead_history">
                                <tree>
                                    <field name="create_date"/>
                                    <field name="name" string="Lead"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="email_from"/>
                                    <field name="phone"/>
                                    <field name="team_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div> 
            </form>
        </field>
        </record>

        <!-- Override of the initial view to add custom fields -->
        <record id="crm_case_form_view_leads_inherit" model="ir.ui.view">
            <field name="name">crm_case_form_view_leads_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="priority">2000</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='contact_name']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='contact_lastname']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='contact_name']" position="after">
                    <field name="contact_middlename" placeholder="Middle name"/>
                </xpath>
                
                <xpath expr="//field[@name='score']" position="replace">
                </xpath>

                <xpath expr="//field[@name='score_ids']" position="before">
                    <field name="score"/>
                </xpath>
              
                <xpath expr="//field[@name='description']/.." position="after">
                    <page string="Contact Us Message">
                        <field name="contact_us_message"/>
                    </page>
                </xpath>

                <xpath expr="//field[@name='medium_id']" position="after">
                    <field name="referent_id" options='"no_create_edit": True}'/>
                </xpath>
                

            </field>
        </record>

        <record id="view_lead_new_ci_form" model="ir.ui.view">
            <field name="name">view_lead_new_ci_form</field>
            <field name="mode">primary</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <!-- HIDE HEADER -->
                </xpath>
                <xpath expr="//field[@name='therapeutic_area_ids']" position="attributes">
                    <!-- HIDE therapeutic area field -->
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='medium_id']" position="attributes">
                    <!-- HIDE medium field -->
                    <attribute name="invisible">1</attribute>
                </xpath>    
                <xpath expr="//page[@name='lead_history']" position="attributes">        
                    <attribute name="invisible">1</attribute>
                </xpath> 

                <xpath expr="//field[@name='website']" position="after">
                    <field name = "linkedIn_url" widget="url" placeholder="e.g. linkedin.com/company/voisin-consulting-life-sciences"/>
                </xpath>

                <xpath expr="//field[@name='user_id']" position="attributes">        
                    <attribute name="readonly">1</attribute>
                </xpath>
                

            </field>
        </record>

        <!-- We Override the search view for reporting -->
        <record model="ir.ui.view" id="crm_opportunity_view_search">
            <field name="name">crm_opportunity_view_search</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm_enterprise.crm_opportunity_view_search"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='lost']" position="after">
                    <filter string="Open Opportunities" name="open_opportunities" domain="[('probability', '&lt;', 100), ('type', '=', 'opportunity')]" help="Open Opportunities"/>
                    <separator/>
                    <filter name="sig_opp" string="Significant" domain="[('sig_opp','=',True)]"/>
                    <field name="sig_opp" string="Significant"/>
                </xpath>

            </field>
        </record>

        <!-- Override the search view crm_enterprise.crm_opportunity_action_dashboard-->
        <record id="view_crm_case_opportunities_filter_inherit" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[@name='salesperson']" position="replace">
                <filter string="Account Manager" name="salesperson" context="{'group_by':'user_id'}"/>
            </xpath>

            <xpath expr="//filter[@name='won']" position="before">
                <filter string="Open" name="open" domain="['&amp;', ('active', '=', True), ('stage_id.probability','not in',[0,100])]"/>
            </xpath>

            <xpath expr="//filter[@name='lost']" position="after">
                <separator/>
                <filter name="sig_opp" string="Significant" domain="[('sig_opp','=',True)]"/>
                <field name="sig_opp" string="Significant"/>
            </xpath>
            
        </field>
        </record>

        <!-- used for the NEW CI menu in the contact app-->
        <record model="ir.actions.act_window" id="action_new_CI">
            <field name="name">New CI</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_lead_new_ci_form"/>
        </record>

        <!-- we override the pipeline action -->
        <record model="ir.actions.act_window" id="crm.crm_lead_opportunities_tree_view">
            <field name="name">Pipeline</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,tree,graph,pivot,form,calendar,activity</field>
            <field name="context">{
                    'default_type': 'opportunity',
                    'search_default_assigned_to_me': 1,
                    'search_default_open': 1,
                    }
            </field>
        </record>

        <!-- we override the reporting action -->
        <record model="ir.actions.act_window" id="crm_enterprise.crm_opportunity_action_dashboard">
            <field name="name">Pipeline Analysis</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">dashboard,pivot,graph,cohort</field>
            <field name="search_view_id" ref="vcls-crm.view_crm_case_opportunities_filter_inherit"/>
            <field name="context">{
                    'default_type': 'opportunity',
                    'search_default_assigned_to_me': 1,
                    'search_default_open': 1,
                    }
            </field>
        </record>

        <!-- we override the all lead action to replace some views -->
        <record model="ir.actions.act_window" id="crm.crm_lead_all_leads">
            <field name="name">Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,kanban,graph,pivot,calendar,form,activity</field>
        </record>

        <record id="crm_lead_all_leads_view_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="crm.crm_case_form_view_leads"/>
            <field name="act_window_id" ref="crm.crm_lead_all_leads"/>
        </record>

    </data>
</odoo>